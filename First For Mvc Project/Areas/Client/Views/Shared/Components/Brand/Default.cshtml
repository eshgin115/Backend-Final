@using First_For_Mvc_Project.Areas.Admin.ViewModels.Brand
@model List<ListViewModel>

<div class="brand-area section-space-bottom-100">
    <div class="container">
        <div class="brand-bg"
             data-bg-image="assets/images/website-images//1-1170x300.jpg">
            <div class="row">
                <div class="col-lg-12">
                    <div class="swiper-container brand-slider">
                        <div class="swiper-wrapper">
                            @foreach (var item in Model)
                            {
                                <div id="@item.Id" class="swiper-slide">
                                    <a class="brand-item" href="~/@item.ImageUrl">
                                        <img src="~/@item.ImageUrl"
                                         alt="Brand Image" />
                                    </a>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>