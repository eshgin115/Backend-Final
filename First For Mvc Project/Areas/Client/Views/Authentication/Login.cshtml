@model LoginViewModel

<div class="login-register-area section-space-y-axis-100">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <form method="POST" asp-route="client-auth-login">
                    <div class="login-form">
                        <h4 class="login-title">Login</h4>
                        <div class="row">
                            <div class="col-lg-12">
                                <label>Email Address*</label>
                                <input asp-for="Email" class="mb-0 form-control" id="FirstName" placeholder="Enter Your FirstName Address Here..">
                                <span asp-validation-for="Email" class="text-danger"></span>

                            </div>
                            <div class="col-lg-12">
                                <label>Password</label>
                                <input asp-for="Password" class="mb-0 form-control" id="FirstName" placeholder="Enter Your FirstName Address Here..">
                                <span asp-validation-for="Password" class="text-danger"></span>

                            </div>
                            <div class="col-md-8">
                                <div class="check-box">
                                    <input type="checkbox" id="remember_me" />
                                    <label for="remember_me">Remember me</label>
                                </div>
                            </div>
                            <div class="col-md-4 pt-1 mt-md-0">
                                <div class="forgotton-password_info">
                                    <a href="#"> Forgotten pasward?</a>
                                </div>
                            </div>
                            <div class="col-lg-12 pt-5">
                                <button class="btn btn-custom-size lg-size btn-pronia-primary">
                                    Login
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>