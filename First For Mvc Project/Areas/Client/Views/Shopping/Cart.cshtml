@using First_For_Mvc_Project.Areas.Client.ViewComponents
<div class="cart-area section-space-y-axis-100">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="table-content table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th class="product_remove">remove</th>
                                <th class="product-thumbnail">images</th>
                                <th class="cart-product-name">Product</th>
                                <th class="product-price">Unit Price</th>
                                <th class="product-quantity">Quantity</th>
                                <th class="product-subtotal">Total</th>
                                <th class="cart-product-name">Product Size</th>
                                <th class="cart-product-name">Product Color</th>
                            </tr>
                        </thead>
                        <tbody class="cart-block-order">


                            @await Component.InvokeAsync(nameof(ShoppingCart));


                        </tbody>
                    </table>
                </div>
                
                <div class="row">
                    <div class="col-md-5 ml-auto">
                        <div class="cart-page-total">
                      
                         
                          
                            
                                <a asp-route="client-shopping-checkout">Proceed to checkout</a>
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>