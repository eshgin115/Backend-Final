
@model List<ListViewModel>

<div class="col-lg-12">
    <div class="row justify-content-end">
        <div class="">
            <a asp-controller="book" asp-action="add" target="_blank" class="btn btn-secondary">Add new book</a>
        </div>
    </div>
</div>
<div class="col-lg-12">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Books</h4>
        </div><!--end card-header-->
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped mb-0">
                    <thead>

                        <tr>
                            <th scope="col">@Html.DisplayNameFor(b=>b.GetEnumerator().Current.ButtonName)</th>
                            <th scope="col">@Html.DisplayNameFor(b=>b.GetEnumerator().Current.ButtonURL)</th>
                            <th scope="col">@Html.DisplayNameFor(b=>b.GetEnumerator().Current.Content)</th>
                            <th scope="col">@Html.DisplayNameFor(b=>b.GetEnumerator().Current.Order)</th>
                            <th scope="col">@Html.DisplayNameFor(b=>b.GetEnumerator().Current.Offer)</th>
                            <th scope="col">@Html.DisplayNameFor(b=>b.GetEnumerator().Current.Tittle)</th>
                            <th scope="col">@Html.DisplayNameFor(b=>b.GetEnumerator().Current.ImageURL)</th>

                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var slider in Model)
                        {
                            <tr>
                                <td>@slider.ButtonName</td>
                                <td>@slider.ButtonURL</td>
                                <td>@slider.Content</td>
                                <td>@slider.Order</td>
                                <td>@slider.Offer</td>
                                <td>@slider.Tittle</td>
                                <td> <img src="~/@slider.ImageURL" width="20%"></td>
                                <td class="text-end">
                                    <a asp-route="admin-slider-update" asp-route-id="@slider.Id"><i class="las la-pen text-secondary font-16"></i></a>
                                    <form method="POST" asp-route="admin-lider-delete" asp-route-id="@slider.Id" id="book-form-@slider.Id"></form>
                                    <button type="submit" form="book-form-@slider.Id">
                                        <i class="las la-trash-alt text-secondary font-16"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table><!--end /table-->
            </div><!--end /tableresponsive-->
        </div><!--end card-body-->
    </div><!--end card-->
</div>