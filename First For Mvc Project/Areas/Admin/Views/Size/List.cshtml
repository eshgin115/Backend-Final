@model List<ListViewModel>
<div class="col-lg-12">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Size</h4>
        </div><!--end card-header-->
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped mb-0">
                    <thead>
                        <tr>
                            <th scope="col">@Html.DisplayNameFor(b=>b.GetEnumerator().Current.Id)</th>
                            <th scope="col">@Html.DisplayNameFor(b=>b.GetEnumerator().Current.Name)</th>

                            <th class="text-end">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var size in Model)
                        {
                            <tr>
                                <td>@size.Id</td>
                                <td>@size.Name</td>
                                <td>
                                    <a asp-route="admin-size-update" asp-route-id="@size.Id"><i class="las la-pen text-secondary font-16"></i></a>
                                    <form method="POST" asp-route="admin-size-delete" asp-route-id="@size.Id" id="size-form-@size.Id"></form>
                                    <button type="submit" form="size-form-@size.Id">
                                        <i class="las la-trash-alt text-secondary font-16"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table><!--end /table-->
            </div><!--end /tableresponsive-->
        </div><!--end card-body-->
    </div><!--end card-->
</div>