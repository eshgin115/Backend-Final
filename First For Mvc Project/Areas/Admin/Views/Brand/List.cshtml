@model List<ListViewModel>

<div class="col-lg-12">
    <div class="row justify-content-end">
        <div class="">
            <a asp-route="admin-brand-add" class="btn btn-secondary">Add new brand</a>
        </div>
    </div>
</div>
<div class="col-lg-12">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Books</h4>
        </div><!--end card-header-->
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped mb-0">
                    <thead>
                        <tr>
                            <th> Image</th>
                            <th>CreatedAt</th>
                             <th>UpdatedAt</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var brand in Model)
                        {
                            <tr>
                                <td> <img src="~/@brand.ImageUrl" width="10%"> </td>
                                <td>@brand.CreatedAt</td>
                                <td>@brand.UpdatedAt</td>
                                <td class="text-end">
                                    <a asp-route="admin-brand-update" asp-route-id="@brand.Id"><i class="las la-pen text-secondary font-16"></i></a>
                                    <form method="POST" asp-route="admin-brand-delete" asp-route-id="@brand.Id" id="brand-form-@brand.Id"></form>
                                    <button type="submit" form="brand-form-@brand.Id">
                                        <i class="las la-trash-alt text-secondary font-16"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table><!--end /table-->
            </div><!--end /tableresponsive-->
        </div><!--end card-body-->
    </div><!--end card-->
</div>