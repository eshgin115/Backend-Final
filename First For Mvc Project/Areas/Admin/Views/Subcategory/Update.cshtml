@model UpdateViewModel
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">subcategory</h4>
            </div>
            <div class="card-body">
                <div class="general-label">
                    <form method="POST" asp-route="admin-subcategory-update" asp-route-id="@Model.Id" >
                        <div class="text-danger" asp-validation-summary="ModelOnly"></div>

                       
                        <div class="form-group">
                            <label>Categories</label>
                            <select asp-for="Categoryİd" asp-items="@(new SelectList(Model.Categories, nameof(ListViewModel.Id), nameof(ListViewModel.Name)))" class="form-select">      </select>
                            <span asp-validation-for="Categoryİd" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label>Name</label>
                            <input asp-for="Name" class="form-control">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                      

                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>
            </div><!--end card-body-->
        </div><!--end card-->
    </div>
</div>