@model List<ListViewModel>
<div class="col-lg-12">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">subcategory</h4>
        </div><!--end card-header-->
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped mb-0">
                    <thead>
                        <tr>
                            <th scope="col">@Html.DisplayNameFor(b=>b.GetEnumerator().Current.Id)</th>
                            <th scope="col">@Html.DisplayNameFor(b=>b.GetEnumerator().Current.Name)</th>
                            <th scope="col">@Html.DisplayNameFor(b=>b.GetEnumerator().Current.CategoryName)</th>

                            <th class="text-end">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var subcategory in Model)
                        {
                            <tr>
                                <td>@subcategory.Id</td>
                                <td>@subcategory.Name</td>
                                <td>@subcategory.CategoryName</td>
                                <td>
                                    <a asp-route="admin-subcategory-update" asp-route-id="@subcategory.Id"><i class="las la-pen text-secondary font-16"></i></a>
                                    <form method="POST" asp-route="admin-subcategory-delete" asp-route-id="@subcategory.Id" id="subcategory-form-@subcategory.Id"></form>
                                    <button type="submit" form="subcategory-form-@subcategory.Id">
                                        <i class="las la-trash-alt text-secondary font-16"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table><!--end /table-->
            </div><!--end /tableresponsive-->
        </div><!--end card-body-->
    </div><!--end card-->
</div>