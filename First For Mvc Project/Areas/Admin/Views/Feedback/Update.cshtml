@model UpdateViewModel
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Books</h4>
            </div>
            <div class="card-body">
                <div class="general-label">
                    <form method="POST" asp-route="admin-feedback-update" asp-route-id="@Model.Id" enctype="multipart/form-data">
                        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                        <div class="form-group">
                            <label>User Name</label>
                            <input asp-for="Name" class="form-control">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group">
                            <label>User Role</label>
                            <select asp-for="RoleId" asp-items="@(new SelectList(Model.Roles, nameof(UpdateViewModel.ItemViewModel.Id), nameof(UpdateViewModel.ItemViewModel.Name)))" class="form-select"> </select>>
                             <span asp-validation-for="RoleId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label>Content</label>
                            <input asp-for="Content" class="form-control">
                            <span asp-validation-for="Content" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label>Image</label>
                            <input asp-for="ProfilePhoto" class="form-control">
                            <span asp-validation-for="ProfilePhoto" class="text-danger"></span>
                        </div>

                           <div class="form-group">
                           <input asp-for="ProfilePhotoUrl" type="hidden">
                            <img src="~/@Model.ProfilePhotoUrl" width="20%" />
                        </div>

                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>
            </div><!--end card-body-->
        </div><!--end card-->
    </div>
</div>