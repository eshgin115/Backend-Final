@model UpdateViewModel
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Books</h4>
            </div>
            <div class="card-body">
                <div class="general-label">
                    <form method="POST" asp-route="admin-navbar-update" asp-route-id="@Model.Id">
                        <div class="text-danger" asp-validation-summary="ModelOnly"></div>



                        <div class="form-group">
                            <label>Order</label>
                            <input asp-for="Order" class="form-control">
                            <span asp-validation-for="Order" class="text-danger"></span>
                        </div>
                          <div class="form-group">
                            <label>ToURL</label>
                            <input asp-for="ToURL" class="form-control">
                            <span asp-validation-for="ToURL" class="text-danger"></span>
                        </div>
                          <div class="form-group">
                            <label>Name</label>
                            <input asp-for="Name" class="form-control">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    
                        <div class="form-group">
                            ViewOnHeader:   @Html.RadioButtonFor(model => model.IsViewOnHeader, "true")
                            Not-ViewOnHeader: @Html.RadioButtonFor(model => model.IsViewOnHeader, "false")
                        </div>
                        <div class="form-group">
                            ViewOnFooter:   @Html.RadioButtonFor(model => model.IsViewOnFooter, "true")
                            Not-ViewOnFooter: @Html.RadioButtonFor(model => model.IsViewOnFooter, "false")
                        </div>

                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>
            </div><!--end card-body-->
        </div><!--end card-->
    </div>
</div>