@model UpdateViewModel
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Plants</h4>
            </div>
            <div class="card-body">
                <div class="general-label">
                    <form method="POST" asp-route="admin-plant-update" asp-route-id="@Model.Id" enctype="multipart/form-data">
                        <div class="text-danger" asp-validation-summary="ModelOnly"></div>

                        <div class="form-group">
                            <label>SizeIds</label>
                            <select asp-for="SizeIds" asp-items="@(new SelectList(Model.Sizes, nameof(First_For_Mvc_Project.Areas.Admin.ViewModels.Size.ListViewModel.Id), nameof(First_For_Mvc_Project.Areas.Admin.ViewModels.Size.ListViewModel.Name)))" class="form-select">                            </select>
                            <span asp-validation-for="SizeIds" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label>ColorIds</label>
                            <select asp-for="ColorIds" asp-items="@(new SelectList(Model.Colors, nameof(First_For_Mvc_Project.Areas.Admin.ViewModels.Color.ListViewModel.Id), nameof(First_For_Mvc_Project.Areas.Admin.ViewModels.Color.ListViewModel.Name)))" class="form-select">                            </select>
                            <span asp-validation-for="ColorIds" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label>TagIds</label>
                            <select asp-for="TagIds" asp-items="@(new SelectList(Model.Tags, nameof(First_For_Mvc_Project.Areas.Admin.ViewModels.Tag.ListViewModel.Id), nameof(First_For_Mvc_Project.Areas.Admin.ViewModels.Tag.ListViewModel.Name)))" class="form-select">                            </select>
                            <span asp-validation-for="TagIds" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label>SubcategoryId</label>
                            <select asp-for="SubcategoryId" asp-items="@(new SelectList(Model.Subcategories, nameof(First_For_Mvc_Project.Areas.Admin.ViewModels.Subcategory.ListViewModel.Id), nameof(First_For_Mvc_Project.Areas.Admin.ViewModels.Subcategory.ListViewModel.Name)))" class="form-select">                            </select>
                            <span asp-validation-for="SubcategoryId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label>Title</label>
                            <input asp-for="Title" class="form-control">
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label>Price</label>
                            <input asp-for="Price" class="form-control">
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label>Content</label>
                            <input asp-for="Content" class="form-control">
                            <span asp-validation-for="Content" class="text-danger"></span>
                        </div>
                       


                        <button type="submit" class="btn btn-primary  mt-2">Submit</button>
                    </form>
                </div>
            </div><!--end card-body-->
        </div><!--end card-->
    </div>
</div>